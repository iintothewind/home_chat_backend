{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "alwaysStrict": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "target": "es5"
  }
}